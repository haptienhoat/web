<div class="container">
  <h3>Cập nhật sản phẩm</h3>
  <form action="/admin/{{product.name}}/update" method="post">
    <div class="form-group">
      <label for="product">Tên sản phẩm</label>
      <input type="text" class="form-control" id="name" name="name" placeholder="Tên sản phẩm" value="{{product.name}}"
        readonly>
    </div>
    <div class="form-group">
      <label for="product">Loại</label>
      <input type="text" class="form-control" id="type" name="type" placeholder="Loại" value="{{product.type}}"
        readonly>
    </div>
    <div class="form-group">
      <label for="product">Màu sắc</label>
      <input type="text" class="form-control" id="color" name="color" placeholder="Màu sắc" value="{{product.color}}"
        readonly>
    </div>
    <div class="form-group">
      <label for="product">Giá</label>
      <input type="text" class="form-control" id="price" name="price" placeholder="Giá" value="{{product.price}}">
    </div>
    <div class="form-group">
      <label for="product">Số lượng</label>
      <input type="text" class="form-control" id="quantity_in_stock" name="quantity_in_stock" placeholder="Số lượng"
        value="{{product.quantity_in_stock}}">
    </div>
    <div class="form-group">
      <label for="product">Hình ảnh</label>
      <input type="text" class="form-control" id="image" name="image" placeholder="Hình ảnh" value="{{product.image}}"
        readonly>
    </div>
    <button type="submit" class="btn btn-primary">Cập nhật sản phẩm</button>
  </form>
</div>