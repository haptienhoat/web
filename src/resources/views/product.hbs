<div class="container">
    <div class="mt-4">
        <div class="row">
            {{#each product}}
            <div class="col-sm-6 col-lg-4">
                <div class="card card-product-item" style="width: 18rem;">
                    <a href="/product/{{this.name}}">
                        <img id="img-product" class="card-img-top" src="{{this.image}}" alt="{{this.name}}">
                    </a>
                    <div class="card-body">
                        <h5 class="card-title">{{this.name}}</h5>
                        <p class="card-text">
                            {{this.name}}
                        </p>
                        <p class="card-text">
                            Số lượng: {{this.quantity_in_stock}}
                        </p>
                        <a href="/product/{{this.name}}" class="btn btn-primary">Xem chi tiết</a>
                    </div>
                </div>
            </div>
            {{/each}}
        </div>
    </div>
</div>