<div class="container">
    <div class="mt-4">
        <div class="row">
            <div class="col-lg-3">
                <a href="/cart/creat/{{product.name}}" class="btn btn-primary">Thêm vào giỏ hàng</a>
            </div>

            <div class="col-lg-9">
                <h2>{{product.name}}</h2>
                <img id="img-product-profile" src="{{product.image}}" alt="{{product.name}}">
                <p>Số lượng: {{product.quantity_in_stock}}</p>
                <p>Giá: {{product.price}} đồng</p>
            </div>
        </div>
    </div>
</div>